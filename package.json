{
	"name": "create-hydrastack-app",
	"module": "src/index.ts",
	"type": "module",
	"version": "0.0.1",
	"bin": {
		"create-hydrastack-app": "./dist/index.js"
	},
	"scripts": {
		"build": "bun build ./src/index.ts --target=bun --outdir=dist",
		"lint": "bunx biome format --write ./src/*",
		"format": "bunx biome lint --write ./src/*",
		"check": "bunx biome check --write ./src/*",
		"prepare": "bun run build"
	},
	"simple-git-hooks": {
		"pre-commit": "echo 'precommit hook ran' && bunx lint-staged"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx}": ["bunx biome check --write"]
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@clack/prompts": "^0.10.1",
		"@types/figlet": "^1.7.0",
		"boxen": "^8.0.1",
		"chalk": "^5.4.1",
		"dedent": "^1.6.0",
		"figlet": "^1.8.1",
		"gradient-string": "^3.0.0",
		"lint-staged": "^15.5.2",
		"simple-git-hooks": "^2.13.0"
	}
}
